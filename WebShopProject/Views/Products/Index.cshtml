@model WebShopProject.Models.ProductIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Hidden("sort", Model.Sort)
    @Html.HiddenFor(x => x.OldSearchParams.Title)

    @Html.DisplayNameFor(x => x.SearchParams.Title)
    @Html.TextBoxFor(x => x.SearchParams.Title)

    <button value="Search" name="search" type="submit">Search</button>

    @:<table class="table">
        <tr>
            <th>
                <button type="submit" value="Format.FormatName" name="submit" class="table-header-button">@Html.DisplayNameFor(model => model.Products[0].Format)</button>
            </th>
            <th>
                <button type="submit" value="Movie.Title" name="submit" class="table-header-button">@Html.DisplayNameFor(model => model.Products[0].Movie.Title)</button>
            </th>
            <th>
                <button type="submit" value="Price" name="submit" class="table-header-button">@Html.DisplayNameFor(model => model.Products[0].Price)</button>
            </th>
            <th></th>
        </tr>
}
@foreach (var item in Model.Products)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Format.FormatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>
